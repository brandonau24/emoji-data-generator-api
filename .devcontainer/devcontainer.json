// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/go
{
	"dockerFile": "Dockerfile.dev",
	"features": {
		"ghcr.io/devcontainers/features/go:1": {
			"version": "1.23"
		},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
		"ghcr.io/localstack/devcontainer-feature/localstack-cli:latest": {
			"version": "latest",
			"awslocal": true
		   },
		   "ghcr.io/devcontainers/features/aws-cli:1": {}
	},
	"containerEnv": {
		"LOCALSTACK_AUTH_TOKEN": "${localEnv:LOCALSTACK_AUTH_TOKEN}"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"redhat.vscode-yaml",
				"ms-azuretools.vscode-docker",
				"github.vscode-github-actions",
				"golang.go"
			]
		}
	},
	"runArgs": [
		"--volume=${localWorkspaceFolder}:${localWorkspaceFolder}",
		"--volume=/var/run/docker.sock:/var/run/docker.sock",
		"--name=${localWorkspaceFolderBasename}_devcontainer"
	],
	"workspaceFolder": "${localWorkspaceFolder}",
	"postStartCommand": "sudo chown -R vscode:vscode ${localWorkspaceFolder} && ${localWorkspaceFolder}/devcontainer_init.sh"
}